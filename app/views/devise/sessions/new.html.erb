<source src="http://ia600904.us.archive.org/31/items/BrightSkyAndClouds/SkyAndCloudsh264.mp4" type="video/mp4">
</video>

<div class="login">
		<div class="login-screen">
			<div class="app-title">
				<h1>Login</h1>
        <br />
			</div>

			<div class="login-form">
				<div class="control-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.email_field :email, placeholder: "Email", autofocus: true %>
        </div>

				<div class="control-group">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "on" %>
        </div>

        <%= f.submit "Sign In" %>
        <% end %>
        <%= link_to "Sign Up", new_user_registration_path %>
			</div>
		</div>
	</div>
